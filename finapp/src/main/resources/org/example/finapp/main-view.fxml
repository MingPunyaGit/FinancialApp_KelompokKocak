<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finapp.controllers.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Aplikasi Manajemen Keuangan" />
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Logout" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="20.0">
            <children>
                <HBox spacing="20.0">
                    <children>
                        <!-- Form Input -->
                        <VBox spacing="15.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Tambah Transaksi" />

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Keterangan:" />
                                        <TextField fx:id="descriptionField" prefWidth="250.0" promptText="Masukkan keterangan transaksi" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Jumlah:" />
                                        <TextField fx:id="amountField" prefWidth="250.0" promptText="Masukkan jumlah (contoh: 50000)" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Tanggal:" />
                                        <DatePicker fx:id="datePicker" prefWidth="250.0" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Jenis:" />
                                        <ComboBox fx:id="typeComboBox" prefWidth="250.0" promptText="Pilih jenis transaksi" />
                                    </children>
                                </VBox>

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAddTransaction"
                                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Tambah" />
                                        <Button fx:id="updateButton" mnemonicParsing="false" visible="false"
                                                style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update" />
                                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" visible="false"
                                                style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Batal" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Ringkasan Keuangan -->
                        <VBox spacing="15.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Ringkasan Keuangan" />

                                <VBox spacing="10.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label prefWidth="120.0" text="Total Pemasukan:" />
                                                <Label fx:id="totalIncomeLabel" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;" text="Rp0.00" />
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label prefWidth="120.0" text="Total Pengeluaran:" />
                                                <Label fx:id="totalExpenseLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" text="Rp0.00" />
                                            </children>
                                        </HBox>

                                        <Separator />

                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label prefWidth="120.0" style="-fx-font-weight: bold;" text="Saldo:" />
                                                <Label fx:id="balanceLabel" style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 14px;" text="Rp0.00" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Daftar Transaksi -->
                <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 20;">
                    <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Daftar Transaksi" />

                        <TableView fx:id="transactionsTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="idColumn" prefWidth="120.0" text="ID" />
                                <TableColumn fx:id="descriptionColumn" prefWidth="150.0" text="Keterangan" />
                                <TableColumn fx:id="amountColumn" prefWidth="120.0" text="Jumlah" />
                                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Tanggal" />
                                <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Jenis" />
                                <TableColumn fx:id="actionColumn" prefWidth="120.0" text="Aksi" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>