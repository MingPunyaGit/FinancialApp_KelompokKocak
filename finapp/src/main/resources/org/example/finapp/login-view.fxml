<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.finapp.controllers.LoginController">
    <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 0);">
        <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>
        <VBox alignment="CENTER" spacing="10.0">
            <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="FINANCE APP"><font><Font name="System Bold" size="24.0" /></font></Text>
            <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Kelola keuangan dengan mudah" style="-fx-font-style: italic;" />
        </VBox>
        <VBox alignment="CENTER" spacing="15.0">
            <VBox.margin><Insets top="15.0" /></VBox.margin>
            <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 250; -fx-font-size: 14;" />
            <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 250; -fx-font-size: 14;" />
            <CheckBox fx:id="rememberMeCheckBox" text="Ingat Saya" style="-fx-pref-width: 250;" />
            <Button mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="MASUK" />
        </VBox>
        <HBox alignment="CENTER" spacing="5.0">
            <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Belum punya akun?" />
            <Hyperlink onAction="#handleShowRegister" style="-fx-font-weight: bold;" text="Daftar sekarang" />
        </HBox>
    </VBox>
</StackPane>